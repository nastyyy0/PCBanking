<Window x:Class="WpfApp1.AddCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource {x:Type Window}}"
        Title="Добавить карту" Height="360" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добавление карты" FontSize="30"
                   Foreground="White" 
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.Row="0"
                   Margin="5"/>

        <TextBox x:Name="CardNumberTextBox" 
                    Width="150" 
                    Height="25" 
                    Grid.Row="1"
                    TextChanged="CardNumberTextBox_TextChanged"
                    GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"
                    MaxLength="19"/> <!-- 16 цифр + 3 пробела -->
        <TextBlock x:Name="CardNumberHint" Text="Номер карты" Foreground="Gray"
                   IsHitTestVisible="False" Margin="85,0,100,0" Grid.Row="1"
                   VerticalAlignment="Center"/>

        <TextBox x:Name="CardNameTextBox" Width="150" Height="25" Grid.Row="2"
                 GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Margin="5"
                 MaxLength="30"/>
        <TextBlock x:Name="CardNameHint" Text="Имя карты" Foreground="Gray"
                   IsHitTestVisible="False" Margin="85,0,100,0" Grid.Row="2"
                   VerticalAlignment="Center"/>

        <TextBox x:Name="CardholderTextBox" Width="150" Height="25" Grid.Row="3"
                 GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Margin="5"/>
        <TextBlock x:Name="CardholderHint" Text="Имя держателя" Foreground="Gray"
                   IsHitTestVisible="False" Margin="85,0,100,0" Grid.Row="3"
                   VerticalAlignment="Center" />

        <TextBox x:Name="ExpiryTextBox" 
                    Width="100" 
                    Height="25" 
                    Grid.Row="4"
                    PreviewTextInput="ExpiryTextBox_PreviewTextInput" 
                    TextChanged="ExpiryTextBox_TextChanged"
                    GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"
                    MaxLength="7"/> 
        <TextBlock x:Name="ExpiryHint" Text="MM/yyyy" Foreground="Gray"
                   IsHitTestVisible="False" Margin="110,0,85,0" Grid.Row="4"
                   VerticalAlignment="Center" />

        <TextBox x:Name="CVVTextBox" Width="70" Height="25" Grid.Row="5"
                 GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Margin="5"
                 MaxLength="3"/>
        <TextBlock x:Name="CVVHint" Text="CVV" Foreground="Gray"
                   IsHitTestVisible="False" Margin="125,0,125,0" Grid.Row="5"
                   VerticalAlignment="Center" />

        <StackPanel Orientation="Horizontal" Grid.Row="6" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Отмена" Width="80" Margin="0,0,15,0" Click="CancelButton_Click"/>
            <Button Content="Добавить" Width="100" Click="AddCardButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
