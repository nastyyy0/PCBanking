<Window x:Class="WpfApp1.ReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Style="{StaticResource {x:Type Window}}"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Чек операции" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="История операций" FontSize="30"
            Foreground="White" 
            FontWeight="Bold"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="15"/>

            <TextBlock Text="{Binding CardName, StringFormat=Имя карты: {0}}" FontSize="16" Margin="0,5"/>
            <TextBlock Text="{Binding TransactionType, StringFormat=Вид операции: {0}}" FontSize="16" Margin="0,5"/>
            <TextBlock Text="{Binding Amount, StringFormat=Сумма: {0:C}}" FontSize="16" Margin="0,5"/>
            <TextBlock Text="{Binding TransactionDate, StringFormat=Дата: {0:dd.MM.yyyy HH:mm}}" FontSize="16" Margin="0,5"/>
            <TextBlock Text="{Binding Status, StringFormat=Статус: {0}}" FontSize="16" Margin="0,5"/>
            <TextBlock Text="{Binding Description, StringFormat=Описание: {0}}" FontSize="16" Margin="0,5" TextWrapping="Wrap"/>

            <Button Content="Создать Word-документ" Width="200" Height="40" Margin="0,20,0,0" HorizontalAlignment="Center" Click="CreateWordButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
