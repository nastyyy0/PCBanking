<Window x:Class="WpfApp1.CardsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource {x:Type Window}}"
        Title="Мои карты" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Мои карты" FontSize="30"
                    Foreground="White" 
                    FontWeight="Bold"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="5"/>

        <ListView x:Name="CardsListView"
          Grid.Row="1"
          BorderThickness="0"
          Background="Transparent"
          Foreground="Black"
          FontSize="16"
          PreviewMouseLeftButtonUp="CardsListView_PreviewMouseLeftButtonUp"
          MouseDoubleClick="CardsListView_MouseDoubleClick">

            <ListView.View>
                <GridView x:Name="CardsGridView">
                    <GridViewColumn Header="Номер карты" Width="180" DisplayMemberBinding="{Binding Number}"/>
                    <GridViewColumn Header="Держатель" Width="150" DisplayMemberBinding="{Binding Cardholder}"/>
                    <GridViewColumn Header="Срок действия" Width="120" DisplayMemberBinding="{Binding Expiry}"/>
                    <GridViewColumn Header="Баланс (BYN)" Width="100" DisplayMemberBinding="{Binding Balance}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBox x:Name="Search_txb" Width="250" Height="25" Grid.Row="2" TextChanged="Search_txb_TextChanged"/>
    </Grid>
</Window>