<Window x:Class="WpfApp1.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        Style="{StaticResource {x:Type Window}}"
        mc:Ignorable="d"
        Title="Настройки" Height="200" Width="200">

    <Grid Background="{x:Null}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="180" Width="180">
            <TextBlock Text="Настройки" 
                FontSize="30"
                Foreground="White" 
                FontWeight="Bold"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="5"/>

            <Button Content="Выход из аккаунта" Click="Exit_Click" Margin="5"/>
            <Button Content="Восстановить пароль" Click="ForgotPassword_Click" Margin="5"/>
            <Button Content="Выход из программы" Click="Close_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
