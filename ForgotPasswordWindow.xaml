<Window x:Class="WpfApp1.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Style="{StaticResource {x:Type Window}}"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
       Title="Восстановление пароля" Height="160" Width="200">
    <Grid Background="{x:Null}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="140" Width="190">
            <TextBlock Text="Запросить пароль" 
                FontSize="19"
                Foreground="White" 
                FontWeight="Bold"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="5"/>
            
            <TextBlock Text="на почту" 
                FontSize="15"
                Foreground="White" 
                FontWeight="Bold"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="5"/>

            <TextBox x:Name="EmailTextBox" Margin="5" Height="25"/>
            <Button x:Name="RecoverPassword" Content="Восстановить" Click="RecoverPassword_Click" Grid.Row="1" HorizontalAlignment="Center" Width="120" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>