<Window x:Class="WpfApp1.OrderCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Style="{StaticResource {x:Type Window}}"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
         Title="Заказ карты" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Заказ карты" FontSize="30"
            Foreground="White" 
            FontWeight="Bold"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="15"/>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <TextBox x:Name="FullNameTextBox" Width="250" Height="25" MaxLength="50"
             GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBlock x:Name="FullNameHint" Text="ФИО (заглавные латиницей):" Foreground="Gray"
             IsHitTestVisible="False" Margin="65,0,70,0" VerticalAlignment="Center" />
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Тип карты:" Foreground="DimGray" Margin="65,0,65,5" VerticalAlignment="Center" />
                <ComboBox x:Name="CardTypeComboBox" Width="250" Height="25">
                    <ComboBoxItem Content="Стандартная" />
                    <ComboBoxItem Content="Золотая" />
                    <ComboBoxItem Content="Платиновая" />
                </ComboBox>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Выберите карту для оплаты: " Foreground="DimGray" Margin="65,0,65,5" VerticalAlignment="Center" />
                <ComboBox x:Name="PaymentCardComboBox" Width="250" Height="25" DisplayMemberPath="Number" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="4">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Стоимость услуги:" Foreground="Gray" Margin="65,0,65,10" VerticalAlignment="Center" />
                <TextBlock x:Name="PriceTextBlock" FontWeight="Bold" Width="250" Height="25"/>
            </StackPanel>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="5" Margin="0,10,0,0">
            <Button Content="Отмена" Width="70" Margin="0,0,10,0"  Click="CancelButton_Click"/>
            <Button Content="Заказать карту" Width="110" Click="OrderCardButton_Click"/>
        </StackPanel>
    </Grid>
</Window>